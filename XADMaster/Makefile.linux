# Suffix rules
.SUFFIXES: .o .m .c
.m.o :
	$(OBJCC) $(OBJC_OPTS) $(GNUSTEP_OPTS) $(GCC_OPTS) $(INCLUDE_DIRS) $< -o $@	
.c.o :
	$(CC) $(C_OPTS) $(GCC_OPTS) $< -o $@
.cpp.o :
	$(CPP) $(CPP_OPTS) $(GCC_OPTS) $< -o $@

# Compilation rules
all: unar XADTest2 XADTest3 XADTest4

unar: unar.o $(SOURCE_FILES)
	$(LD) $(LD_OPTS) -o $@ $^ $(GNUSTEP_LIBS) $(BASE_LIBS)

XADTest2: XADTest2.o $(SOURCE_FILES)
	$(LD) $(LD_OPTS) -o $@ $^ $(GNUSTEP_LIBS) $(BASE_LIBS)

XADTest3: XADTest3.o $(SOURCE_FILES)
	$(LD) $(LD_OPTS) -o $@ $^ $(GNUSTEP_LIBS) $(BASE_LIBS)

XADTest4: XADTest4.o $(SOURCE_FILES)
	$(LD) $(LD_OPTS) -o $@ $^ $(GNUSTEP_LIBS) $(BASE_LIBS)

